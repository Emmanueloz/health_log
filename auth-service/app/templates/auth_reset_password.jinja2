{% extends "base.jinja2" %}
{% block title %}Resetear contraseña{% endblock %}
{% block content %}
<h1>Resetear contraseña</h1>
<form method="post" action="{{ url_for('views.reset_password_view', token=token) if token else url_for('views.reset_password_view') }}">
  <label>Token
    <input type="text" name="token" value="{{ token or '' }}" required />
  </label>
  <label>Nueva contraseña
    <input type="password" name="new_password" required minlength="8" />
  </label>
  <button type="submit">Actualizar</button>
</form>
{% endblock %}